ifdef Microsoft
DEFINE_BYTE		MACRO	X,Y
	_&X	DB	&Y
	ENDM
DEFINE_WORD		MACRO	X,Y
	_&X	DW	&Y
	ENDM
DEFINE_DWORD	MACRO	X,Y
	_&X	DD	&Y
	ENDM
DECLARE_VAR		MACRO	X
	&X	EQU	<_&X>
	ENDM
DECLARE_EXTRN	MACRO	X
	EXTRN	_&X
	ENDM
DECLARE_PUBLIC	MACRO	X
	PUBLIC	_&X
	ENDM
START_FAR_PROC	MACRO	X
	_&X	PROC FAR
	ENDM
START_NEAR_PROC	MACRO	X
	_&X	PROC NEAR
	ENDM
END_PROC	MACRO	X
	_&X	ENDP
	ENDM
CALL_PROC	MACRO	X
	CALL	_&X
	ENDM
else
DEFINE_BYTE		MACRO	X,Y
	&X	DB	&Y
	ENDM
DEFINE_WORD		MACRO	X,Y
	&X	DW	&Y
	ENDM
DEFINE_DWORD	MACRO	X,Y
	&X	DD	&Y
	ENDM
DECLARE_VAR		MACRO	X
	&X	EQU	<&X>
	ENDM
DECLARE_EXTRN	MACRO	X
	EXTRN	&X
	ENDM
DECLARE_PUBLIC	MACRO	X
	PUBLIC	&X
	ENDM
START_FAR_PROC	MACRO	X
	&X	PROC FAR
	ENDM
START_NEAR_PROC	MACRO	X
	&X	PROC NEAR
	ENDM
END_PROC	MACRO	X
	&X	ENDP
	ENDM
CALL_PROC	MACRO	X
	CALL	&X
	ENDM
endif
